html
  head
    meta(charset='utf-8')
    title Balloon Simulator
    link(rel='stylesheet', type='text/css', href='css/balloons.css')
  body
    h1 Your simulator id is 
      span.big= target_id
    #canvas
    #editor-canvas
      textarea#editor(rows='30', cols='80')
        | var counter = 0;
        | var tail = [0, 0, 0, 0];
        | var i;
        | setInterval(function() {
        | counter++;
        | for (i = 0; i &lt; balloons.length; i++) {
        | setColor(i, 255, 255, 255, 1);
        | }
        | var id = counter % 75;
        | for (i = 0; i &lt; tail.length; i++) {
        | setColor(tail[i], 255, 0, 0, (i / parseFloat(tail.length - 1, 10)));
        | }
        | setColor(id, 255, 0, 0, 1);
        | if (id &lt; 51) {
        | tail.shift();
        | tail.push(id);
        | } else {
        | setColor(id + 25, 255, 0, 0, 1);
        | tail.shift();
        | tail.shift();
        | tail.push(id);
        | tail.push(id + 25);
        | }
        | }, 50);
      button(onclick='runSomeBalloonFun()') Run
    script(src='js/balloons.js')
